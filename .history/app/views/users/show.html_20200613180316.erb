<%= provide(:title, "User-Events") %>
<section class="container-fluid m-5 p-5">


  <div class="row box">
    <h2 class="header-1 bg-primary p-3">Events created by <%= @user.name.capitalize %></h1>
      <div class="badge badge-pill badge-dark mb-4"><span class="badge badge-light">
          <%= pluralize(@events.count, "event") %>.</span> </div>
      <div class="container-cards">
        <% @events.each do |event| %>
        <div class="card-type">
          <div class="text-center">
            <p class="bordered">Event Description: <%= event.description %></p>
            <p class="bordered">Event Date: <%= event.date %></p>
            <p class="bordered">Event Location: <%= event.location %></p>
          </div>
        </div>
        <% end %>
      </div>
      <hr>
  </div>

  <div class="row">
    <h2 class="header-1 text-light bg-success">Events you have been booked to attend. <br> Upcoming Events of User: <%= @user.name.capitalize %></h1>
      <div class="badge badge-pill badge-dark mb-3"><span class="badge badge-light">
          <%= pluralize(@upcoming_events.count, "upcoming event") %>.</span> </div>
      <div class="container-cards">
        <% @upcoming_events.each do |event| %>
        <div class="card-type">
          <div class="text-center">
            <p class="bordered">Event Description: <%= event.description %></p>
            <p class="bordered">Event Date: <%= event.date %></p>
            <p class="bordered">Event Location: <%= event.location %></p>
          </div>
        </div>
        <% end %>
      </div>
      <hr>
  </div>

  <div class="row">
    <h2 class="header-1 bg-warning">Past events created by User:<%= @user.name.capitalize %></h1>
      <div class="badge badge-pill badge-dark"><span class="badge badge-light">
          <%= pluralize(@prev_events.count, "previous event") %>.</span> </div>
      <div class="container-cards">
        <% @prev_events.each do |event| %>
        <div class="card-type">
          <div class="text-center">
            <p class="bordered">Event Description: <%= event.description %></p>
            <p class="bordered">Event Date: <%= event.date %></p>
            <p class="bordered">Event Location: <%= event.location %></p>
          </div>
        </div>
        <% end %>
      </div>
      <hr>
  </div>
  <%= link_to 'Edit user', edit_user_path(@user) %> |
  <%= link_to 'Back to users list', users_path %>
</section>